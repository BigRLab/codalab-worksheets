{
    "aliases": {
        "localhost": "http://localhost:2800"
    },
    "home": "~/.codalab",
    "client": {
        "class": "LocalBundleClient"
    },
    "cli": {
        "verbose": 1
    },
    {% if EMAIL_HOST %}
    "email": {
      "host": "{{EMAIL_HOST}}",
      "user": "{{EMAIL_HOST_USER}}",
      "password": "{{EMAIL_HOST_PASSWORD}}"
    },
    {% endif %}
    "server": {
        "host": "localhost",
        "port": 2800,
        "rest_host": "localhost",
        "rest_port": 2900,
        "class": "MySQLModel",
        "engine_url": "mysql://{{BUNDLE_DB_USER}}:{{BUNDLE_DB_PASSWORD}}@localhost:3306/{{BUNDLE_DB_NAME}}",
        "verbose": 1,
        "auth": {
            "class": "RestOAuthHandler"
        },
        "default_user_info": {
            "time_quota": "7d",
            "disk_quota": "10g"
        },
        "secret_key": "{{SECRET_KEY}}"
    },
    "email": {
        "host": "{{EMAIL_HOST}}",
        "user": "{{EMAIL_HOST_USER}}",
        "password": "{{EMAIL_HOST_PASSWORD}}"
    },
    "workers": {
        "default_docker_image": "codalab/ubuntu:1.9",
        "max_request_time": "1d",
        "max_request_memory": "10g",
        "max_request_disk": "10g"
    }
}
